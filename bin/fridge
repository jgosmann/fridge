#!/usr/bin/env python

import argparse
import os
import sys


def main(argv=None):
    if argv is None:
        argv = sys.argv

    # TODO add description and usage help
    parser = argparse.ArgumentParser()
    parser.add_argument('cmd', nargs=1, type=str)
    # FIXME what happens with an invalid cmd?
    parser.add_argument('argv', nargs='*', type=str)
    args = parser.parse_args(argv)

    if 'init' in args.cmd:
        os.mkdir('.fridge')
    elif 'commit':
        pass  # TODO
    elif 'checkout':
        pass  # TODO

if __name__ == '__main__':
    sys.exit(main())
